<%= form_with(model: @post, local: true) do |form| %>

    <div class="title">
      <div class="form-tag">タイトル</div>
      <%= form.text_field :title %>
    </div>

    
    <div class="category">
    <div class="form-tag">カテゴリ</div>
     <%= form.text_field :category %>
    </div>


    <div class="body">
    <div class="form-tag">リンク</div>
     <%= form.text_field :body %>
    </div>
  
  
  
    <div class="submit">
      <%= form.submit %>
    </div>
  
  <% end %>